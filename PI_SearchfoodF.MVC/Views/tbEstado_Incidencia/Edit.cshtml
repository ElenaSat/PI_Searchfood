@model PI_SearchfoodF.MVC.Models.tbEstadoIncidencia

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <h4>Editar</h4>
    <hr />
    @Html.HiddenFor(model => model.Id)
