@model PI_SearchfoodF.MVC.Models.tbEstadoIncidencia

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) {
    <div class="form-horizontal">
        <h4>Crear Registro</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.EstdDescripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*<input type="text" id="Descripcion" name="Descripcion" class="form-control" />*@
                @Html.EditorFor(model => model.EstdDescripcion, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary btn-sm" })
            </div>
        </div>
    </div>
}